<body>

  <h1 class="main_view">Books</h1>
  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td>
           <%= link_to "Show", book_path(book) %>
           <%= link_to "Edit", edit_book_path(book) %>
           <%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
         </td>
       </tr>
      <% end %>
    </tbody>
  </table>
  
  
  
  <h2>New book</h2>
  
  <% if @book.errors.any? %>
   <%= @book.errors.count %>error prohibited this book form being saved:
   <% @book.errors.full_messages.each do |message| %>
    <%= message %>
   <% end %>
  <% end %>
  
  
  <%= form_with model: @book, url:'/books', local:true do |f| %>
   <div class="field">
     <p class="input_box">Title</p>
     <%= f.text_field :title %>
   </div>
   <div class="field">
     <p class="input_box">Body</p>
     <%= f.text_area :body %>
     
     <div class="button">
      <%= f.submit'Create Book' %>
     </div>
   </div>
  <% end %>
    
</body>
