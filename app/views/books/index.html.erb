<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td>
         <%= link_to "Show", book_path(book) %>
         <p>Edit</p>
         <p>Destroy</p>
       </td>
     </tr>
    <% end %>
    
  </tbody>
</table>



<h1>New book</h1>
<%= form_with model: @book, url:'/books', local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <%= f.submit'Create Book' %>
<% end %>